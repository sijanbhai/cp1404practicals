BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '0'
            font_size: 32
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: "Up"
                on_press: app.handle_increment(input_miles.text, 1)
            Button:
                text: "Down"
                on_press: app.handle_increment(input_miles.text, -1)

    Button:
        text: "Convert miles to km"
        background_color: (0.5, 0.5, 0.5, 1)
        color: (1, 1, 1, 1)
        on_press: app.handle_conversion(input_miles.text)

    Label:
        text: app.output_text
        font_size: 32
        color: (1, 1, 0, 1)  # Yellow text
        background_color: (0, 0, 0, 1)  # Black background
