BoxLayout:
    orientation: 'vertical'
    padding: [10, 10]
    spacing: 10
    Label:
        text: 'Enter your name'
        font_size: 20
        size_hint_y: None
        height: 50

    Label:
        id: greeting_label
        text: "Please enter your name."
        font_size: 20
        size_hint_y: None
        height: 50

    TextInput:
        id: name_input
        hint_text: "Enter your name"
        multiline: False
        size_hint_y: None
        height: 40

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 50

        Button:
            text: 'Greet Me'
            on_press: app.greet_user()  # Call the greet_user method when the button is pressed

        Button:
            text: 'Clear Name'
            on_press: app.clear_name()  # Call the clear_name method when the button is pressed
