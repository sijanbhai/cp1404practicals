BoxLayout:
    orientation: 'vertical'

    Button:
        text: 'Clear'
        on_press: app.handle_clear()

    TextInput:
        id: input_name  # Assign an id to the TextInput for reference
        text: ''  # Default to an empty string
        hint_text: 'Enter your name here'

    Button:
        text: 'Greet'
        on_press: app.handle_greet()

    Label:
        id: output_label  # Assign an id to the Label
        text: 'Enter your name'
        color: (1, 1, 0, 1)  # Set text color to yellow
