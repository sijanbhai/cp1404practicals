BoxLayout:
    orientation: 'vertical'
    padding: [10, 10]
    spacing: 10

    Button:
        text: 'Clear'
    TextInput:
        id: input_name  # Assign an id to the TextInput for reference in Python code
        text: ''  # Default to an empty string
        hint_text: 'Enter your name here'  # Show a hint for the user

    Button:
        text: 'Greet'
        on_press: app.handle_greet()
    Label:
        text: 'Enter your name'
        color: (1, 1, 0, 1)
        id: output_label

    Label:
        id: greeting_label
        text: "Please enter your name."
        font_size: 20
        size_hint_y: None
        height: 50

    TextInput:
        id: name_input
        hint_text: "Enter your name"
        multiline: False
        size_hint_y: None
        height: 40

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 50

        Button:
            text: 'Greet Me'
            on_press: app.greet_user()  # Call the greet_user method when the button is pressed

        Button:
            text: 'Clear Name'
            on_press: app.clear_name()  # Call the clear_name method when the button is pressed
